#!/bin/bash

DIR=$(dirname "${BASH_SOURCE[0]}") 
DIR=$(realpath "${DIR}") 

template_path="$(cd $DIR/../ && pwd)/templates"
source $DIR/../includes/helpers.sh

if [ "$EUID" -ne 0 ]
  then echo "Please run as root"
  exit
fi

while getopts u:p: flag
do
    case "${flag}" in
        u) username=${OPTARG};;
    esac
done

if [ -z "$username" ]
then
    echo "Please provide a username using -u "
    exit 1;
fi





if ! id "$username" &>/dev/null
then
    echo "The $username doesn't exist"    
    exit 1;
fi

if [ ! -L "/var/www/home/$username/bin/php" ] && [ ! -S "/var/run/php/$username-php-fpm.sock" ]
then
    echo "This is not a PHP site"
    exit 1;
fi


php_versions_array=("8.1" "8.0" "7.4" "7.3" "7.2" "7.1" "7.0" "5.6" )

for php_v in ${php_versions_array[@]}; do    
    if [ -f "/etc/php/$php_v/fpm/pool.d/$username.conf" ]
    then
        systemctl restart php$php_v-fpm
    fi
done


exit 0;