#!/bin/bash

DIR=$(dirname "${BASH_SOURCE[0]}") 
DIR=$(realpath "${DIR}") 

template_path="$(cd $DIR/../ && pwd)/templates"

if [ "$EUID" -ne 0 ]
  then echo "Please run as root"
  exit
fi

while getopts u:n: flag
do
    case "${flag}" in
        u) username=${OPTARG};;        
        n) backup_name=${OPTARG};;        
    esac
done

if [ -z "$username" ]
then
    echo "Please provide a username using -u "
    exit
fi



if ! id "$username" &>/dev/null
then
    echo "The $username doesn't exist"    
    exit;
fi

if [ -z "$backup_name" ]
then
    echo "Please provide a backup_name using -n "
    exit
fi



if [ ! -d "/backups/$username/$backup_name" ] 
then
    echo "There is no backup found at this location /backups/$username/$backup_name"    
    exit;
fi


if [ ! -d "/backups/$username/$backup_name/www.sql.gz" ] 
then
    echo "There are no files to replace as /backups/$username/$backup_name/www.sql.gz doesn't exist"    
    exit;
fi


if [ ! -d "/backups/$username/$backup_name/db.sql.gz" ] 
then
    echo "There is no database backup to replace as /backups/$username/$backup_name/db.sql.gz doesn't exist"    
    exit;
fi

echo "Restoring MySQL DB"
pv /backups/$username/$backup_name/db.sql.gz | gunzip | mysql -u root -p $username
echo "Restoring Files in www"
#mv -f /home/$username/www/ /home/$username/www_backup
pv /backups/$username/$backup_name/db.sql.gz | gunzip > /home/$username/www/

