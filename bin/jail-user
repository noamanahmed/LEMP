#!/bin/bash

DIR=$(dirname "${BASH_SOURCE[0]}") 
DIR=$(realpath "${DIR}") 

template_path="$(cd $DIR/../ && pwd)/templates"
source $DIR/../includes/helpers.sh

if [ "$EUID" -ne 0 ]
  then echo "Please run as root"
  exit
fi


while [ $# -gt 0 ]; do
  case "$1" in
    -u|--username)
      username="$2"
      shift
      ;;
    -p|--php)
      php="$2"
      shift
      ;;
    -a|--app)
      app="$2"
      shift
      ;;
    *)
      printf "***************************\n"
      printf "* Error: Invalid argument. $1 *\n"
      printf "***************************\n"
      exit 1
  esac  
  shift
done


if [ -z "$username" ]
then
    echo "Please provide a username using -u "
    exit
fi


if ! id "$username" &>/dev/null
then
    echo "The $username doesn't exist"    
    exit;
fi

chroot_path=/var/chroot/
jk_jailuser -m -j $chroot_path --shell=/bin/bash $username


ln -s /var/chroot/home/$username /home/$username 
cp -rf /root/.nvm /home/$username/

mkdir -p /home/$username/.ssh
mkdir -p /home/$username/.wp-cli

cp -rf $template_path/jailed_ssh/.ssh/* /home/$username/.ssh
cp -rf $template_path/jailed_ssh/.bashrc /home/$username/.bashrc
cp -rf $template_path/jailed_ssh/.profile /home/$username/.profile

chown -R $username:$username /home/$username/.wp-cli
chown -R $username:$username /home/$username/.ssh
chown -R $username:$username /home/$username/.bashrc
chown -R $username:$username /home/$username/.profile
#chown -R $username:$username /home/$username/.config
chown -R $username:$username /home/$username/.nvm

mkdir /home/$username/tmp
chmod 755 /home/$username/tmp

sed -i "s/$(echo $chroot_path | sed 's/\//\\\//g').\/home\/$username/\/home\/$username\//" /etc/passwd
sed -i "s/\/usr\/sbin\/jk_chrootsh/\/bin\/bash/" /etc/passwd

