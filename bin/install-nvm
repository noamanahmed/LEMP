#!/bin/bash

DIR=$(dirname "${BASH_SOURCE[0]}") 
DIR=$(realpath "${DIR}") 

template_path="$(cd $DIR/../ && pwd)/templates"
source $DIR/../includes/helpers.sh

if [ "$EUID" -ne 0 ]
  then echo "Please run as root"
  exit
fi


while getopts u: flag
do
    case "${flag}" in
        u) username=${OPTARG};;        
    esac
done

if [ -z "$username" ]
then
    echo "Please provide a username using -u "
    exit
fi



if ! id "$username" &>/dev/null
then
    echo "The $username doesn't exist"    
    exit;
fi


su $username -c "cd /var/www/home/$username && curl https://raw.githubusercontent.com/creationix/nvm/master/install.sh -o /var/www/home/$username/install.sh && chmod +x /var/www/home/$username/install.sh"
su $username -c "NVM_DIR=/var/www/home/$username ./var/www/home/$username/install.sh"
#su $username -c "rm -rf /var/www/home/$username/install.sh"
