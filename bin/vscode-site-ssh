#!/bin/bash

DIR=$(dirname "${BASH_SOURCE[0]}") 
DIR=$(realpath "${DIR}") 

template_path="$(cd $DIR/../ && pwd)/templates"
source $DIR/../includes/helpers.sh


while getopts u: flag
do
    case "${flag}" in
        u) username=${OPTARG};;                
    esac
done

if [ -z "$username" ]
then
    echo "Please provide a username using -u "
    exit
fi


if ! id "$username" &>/dev/null
then
    echo "The $username doesn't exist"    
    exit;
fi

if [ -z "$local" ]
then  
  echo "This is not a local installation! Aborting."
  exit  
fi
domain=$(cat  /etc/nginx/sites-available/$username.conf  | grep -m1 -Poe 'server_name \K[^; ]+')

code --folder-uri=vscode-remote://ssh-remote+$username@$domain/www

# if ! groups | grep -qw "$username"; then
#     echo "Error! Please update groups in your terminal session first by running  update-groups command."
#     exit 0
# fi
