#!/bin/bash

DIR=$(dirname "${BASH_SOURCE[0]}") 
DIR=$(realpath "${DIR}") 

template_path="$(cd $DIR/../ && pwd)/templates"
source $DIR/../includes/helpers.sh

if [ "$EUID" -ne 0 ]
  then echo "Please run as root"
  exit
fi


while [ $# -gt 0 ]; do
  case "$1" in
    -u|--username)
      username="$2"
      shift
      ;;
    -p|--php)
      php="$2"
      shift
      ;;
    -a|--app)
      app="$2"
      shift
      ;;
    *)
      printf "***************************\n"
      printf "* Error: Invalid argument. $1 *\n"
      printf "***************************\n"
      exit 1
  esac  
  shift
done


if [ -z "$username" ]
then
    echo "Please provide a username using -u "
    exit
fi


if ! id "$username" &>/dev/null
then
    echo "The $username doesn't exist"    
    exit;
fi

chroot_path=/var/chroot


##Fixing Permissions
chown root:root /
chown root:root /home
chown root:root /home/$username
chmod 755  /home/$username

##Mounting
mount --bind /lib /home/$username/lib
mount --bind /proc /home/$username/proc
mount --bind /sys /home/$username/sys
mount --bind /usr /home/$username/usr

##Copying Files
cp -rf $chroot_path/* /home/$username/
cp -rf $chroot_path/.ssh /home/$username/
cp -rf $chroot_path/.nvm /home/$username/
cp -rf $chroot_path/.bashrc /home/$username/.bashrc
cp -rf $chroot_path/.profile /home/$username/.profile
cp -rf $chroot_path/.profile /home/$username/etc/profile
cp -rf $chroot_path/.config /home/$username/.config

## Create temporary directory
mkdir -p /home/$username/tmp

## Fix User Permissions
chown -R $username:$username /home/$username/.bashrc
chown -R $username:$username /home/$username/.profile
chown -R $username:$username /home/$username/.config
chown -R $username:$username /home/$username/.ssh
chown -R $username:$username /home/$username/.nvm
chown -R $username:$username /home/$username/tmp
chown -R $username:$username /home/$username/etc
chown -R $username:$username /home/$username/usr
chown -R $username:$username /home/$username/dev
chown -R $username:$username /home/$username/lib
chown -R $username:$username /home/$username/lib64
chown -R $username:$username /home/$username/dev/null


## Set up for php site
if [ -n $php ] 
then
    cp -rf $chroot_path/.wp-cli /home/$username/.wp-cli
    chown -R $username:$username /home/$username/.wp-cli

    if [ -z "/home/$username/bin/php" ] 
    then
        ln -s php74 /home/$username/bin/php 
    fi
else
    rm -rf /home/$username/usr/lib/php
    rm -rf /home/$username/etc/php
    rm -rf /home/$username/.config/composer
fi





# ## Setting up for a reverse proxy app
# if [ -n $app ]
# then 
#     echo "Testing"
# fi