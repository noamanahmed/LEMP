#!/bin/bash

DIR=$(dirname "${BASH_SOURCE[0]}") 
DIR=$(realpath "${DIR}") 

template_path="$(cd $DIR/../ && pwd)/templates"
source $DIR/../includes/helpers.sh

if [ "$EUID" -ne 0 ]
  then echo "Please run as root"
  exit
fi

while getopts u:p: flag
do
    case "${flag}" in
        u) username=${OPTARG};;
        p) php=${OPTARG};;        
    esac
done

if [ -z "$username" ]
then
    echo "Please provide a username using -u "
    exit
fi



if [ -z "$php" ]
then
    echo "Please provide a php version using -p "
    exit
fi


if ! id "$username" &>/dev/null
then
    echo "The $username doesn't exist"    
    exit;
fi

if [ ! -L "/home/$username/bin/php" ] && [ ! -S "/var/run/php/$username-php-fpm.sock" ]
then
    echo "This is not a PHP site"
    exit;
fi



echo "Switching Web PHP Version to $php"

current_version = readlink /var/run/php/{{username}}-php-fpm.sock | grep -Po  '(?<=$username-php)[0-9]{2}'
mv /etc/php/$current_version/fpm/pool.d/$username.conf /etc/php/$php/fpm/pool.d/$username.conf
systemctl restart php$current_version-fpm
systemctl restart php$php-fpm


echo "Switching CLI PHP Version to $php"

if [ -L "/home/$username/bin/php" ]
then
    rm -rf /home/$username/bin/php
fi

ln -s $(echo "php$php" | sed 's/\.//') /home/$username/bin/php 


