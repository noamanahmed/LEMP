#!/bin/bash

DIR=$(dirname "${BASH_SOURCE[0]}") 
DIR=$(realpath "${DIR}") 

template_path="$(cd $DIR/../ && pwd)/templates"

if [ "$EUID" -ne 0 ]
  then echo "Please run as root"
  exit
fi

while getopts u:p: flag
do
    case "${flag}" in
        u) username=${OPTARG};;
        p) php=${OPTARG};;        
    esac
done

if [ -z "$username" ]
then
    echo "Please provide a username using -u "
    exit
fi



if [ -z "$php" ]
then
    echo "Please provide a php version using -p "
    exit
fi

echo "Switching PHP Versin to $php"
rm -rf $chroot_path/bin/php
ln -s $(echo $chroot_path/bin/php$php | sed 's/\.//') $chroot_path/bin/php 