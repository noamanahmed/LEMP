#!/bin/bash

DIR=$(dirname "${BASH_SOURCE[0]}") 
DIR=$(realpath "${DIR}") 

template_path="$(cd $DIR/../ && pwd)/templates"

if [ "$EUID" -ne 0 ]
  then echo "Please run as root"
  exit
fi

while getopts u:p: flag
do
    case "${flag}" in
        u) username=${OPTARG};;
        p) php=${OPTARG};;        
    esac
done

if [ -z "$username" ]
then
    echo "Please provide a username using -u "
    exit
fi



if [ -z "$php" ]
then
    echo "Please provide a php version using -p "
    exit
fi


if ! id "$username" &>/dev/null
then
    echo "The $username doesn't exist"    
    exit;
fi

if [ ! -L "/home/$username/bin/php" ] && [ ! -d "/opt/php-fpm/$username" ]
then
    echo "This is not a PHP site"
    exit;
fi


if [ ! -d "/opt/php-fpm/$username" ]
then
    echo "Creating PHP-FPM Directory"
    chown $username:$username /opt/php-fpm/$username
fi

echo "Switching Web PHP Versin to $php"

if [ -L "/opt/php-fpm/$username/php-fpm.sock" ]
then
    rm /opt/php-fpm/$username/php-fpm.sock
fi

ln -s /var/run/php/$username-$(echo "php$php" | sed 's/\.//')-fpm.sock /opt/php-fpm/$username/php-fpm.sock
chown $username:$username /opt/php-fpm/$username/php-fpm.sock

echo "Switching CLI PHP Versin to $php"

if [ -L "/home/$username/bin/php" ]
then
    rm -rf /home/$username/bin/php
fi

ln -s $(echo "php$php" | sed 's/\.//') /home/$username/bin/php 


