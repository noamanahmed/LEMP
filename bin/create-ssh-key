#!/bin/bash

DIR=$(dirname "${BASH_SOURCE[0]}") 
DIR=$(realpath "${DIR}") 

template_path="$(cd $DIR/../ && pwd)/templates"
source $DIR/../includes/helpers.sh

if [ "$EUID" -ne 0 ]
  then echo "Please run as root"
  exit
fi

while [ $# -gt 0 ]; do
  case "$1" in
    -u|--username)
      username="$2"
      shift
      ;;
    -d|--domain)
      domain="$2"
      shift
      ;;        
    *)
      printf "***************************\n"
      printf "* Error: Invalid argument. $1 *\n"
      printf "***************************\n"
      exit 1
  esac  
  shift
done



if [ -f "$chroot_home/.ssh/$username" ] 
then
    echo "SSH key already exists!"
    exit 1;
fi

ssh-keygen -t dsa -N "" -C $username@$HOSTNAME -f $chroot_home/.ssh/$username
chown -R $username:$username $chroot_home/.ssh