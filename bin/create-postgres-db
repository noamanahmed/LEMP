#!/bin/bash

DIR=$(dirname "${BASH_SOURCE[0]}") 
DIR=$(realpath "${DIR}") 

template_path="$(cd $DIR/../ && pwd)/templates"
source $DIR/../includes/helpers.sh

if [ "$EUID" -ne 0 ]
  then echo "Please run as root"
  exit
fi


if ! systemctl is-active --quiet postgres
  then 
  echo "postgres is not running! Aborting!"
  exit
fi

## Creating postgres user and database

database_name="$(openssl rand -hex 6)"
database_user="$(openssl rand -hex 6)"
database_password="$(openssl rand -hex 8)"

psql -c "CREATE DATABASE"
psql -c "CREATE USER '$database_user'@'localhost' IDENTIFIED BY '$database_password'"
psql -c "GRANT ALL PRIVILEGES ON $database_name.* To '$database_user'@'localhost'"
psql -c "GRANT SESSION_VARIABLES_ADMIN ON *.*  TO '$database_user'@'localhost'";
psql -c "FLUSH PRIVILEGES;"


echo ""
echo "Postgres Database Credentials"
echo "Database name: $database_name"
echo "Database user: $database_user"
echo "Database password: $database_password"
echo ""