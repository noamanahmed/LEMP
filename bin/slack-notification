#!/bin/bash

DIR=$(dirname "${BASH_SOURCE[0]}") 
DIR=$(realpath "${DIR}") 

template_path="$(cd $DIR/../ && pwd)/templates"
source $DIR/../includes/helpers.sh

if [ "$EUID" -ne 0 ]
  then echo "Please run as root"
  exit
fi

while [ $# -gt 0 ]; do
  case "$1" in
    -u|--username)
      username="$2"
      shift
      ;;
    -d|--domain)
      domain="$2"
      shift
      ;;   
    -m|--message)
      message="$2"
      shift
      ;;     
    --warning)     
      warning=yes  
      ;;
    --sucess)     
      sucess=yes  
      ;;
    *)
      printf "***************************\n"
      printf "* Error: Invalid argument. $1 *\n"
      printf "***************************\n"
      exit 1
  esac  
  shift
done


if [ -z "$username" ]
then
    echo "Please provide a username using -u "
    exit
fi


if [ -z "$domain" ]
then
    echo "Please provide a domain using -d "
    exit
fi


if ! id "$username" &>/dev/null
then
    echo "The $username already exists!. Please run delete-site -u $username"
    exit
fi



URL=$(cat /etc/monit/slack-url)

if [ -z "$URL" ]
then    
    echo "No slack webhook notification URL definted"
    exit
fi


if [ ! -z "$success" ]
then
    COLOR='good'
fi


if [ ! -z "$warning" ]
then
    COLOR='danger'
fi

# Type can be good or danger

TEXT=$message

PAYLOAD="{
  \"attachments\": [
    {
      \"text\": \"$TEXT\",
      \"color\": \"$COLOR\",
      \"mrkdwn_in\": [\"text\"],
      \"fields\": [
        { \"title\": \"Date\", \"value\": \"$(date)\", \"short\": true },
        { \"title\": \"Host\", \"value\": \"$domain\", \"short\": true }
      ]
    }
  ]
}"

echo $PAYLOAD

curl -s -X POST --data-urlencode "payload=$PAYLOAD" $URL