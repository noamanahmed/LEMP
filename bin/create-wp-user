#!/bin/bash

DIR=$(dirname "${BASH_SOURCE[0]}") 
DIR=$(realpath "${DIR}") 

template_path="$(cd $DIR/../ && pwd)/templates"

if [ "$EUID" -ne 0 ]
  then echo "Please run as root"
  exit
fi

while getopts u:d:f:p flag
do
    case "${flag}" in
        u) username=${OPTARG};;        
    esac
done

if [ -z "$username" ]
then
    echo "Please provide a username using -u "
    exit
fi


if ! id "$username" &>/dev/null
then
    echo "The $username doesn't exist"    
    exit;
fi



if [ ! -d "/home/$username/www/wp-config.php" ] 
then
    echo "There is not a wordpress site"    
    exit;
fi


runuser -l $username -c "wp --path=/home/$username/www user delete noaman --reassign=1"
runuser -l $username -c "wp --path=/home/$username/www user create noaman noaman@mailinator.com --role=administrator"