#!/bin/bash

DIR=$(dirname "${BASH_SOURCE[0]}") 
DIR=$(realpath "${DIR}") 

template_path="$(cd $DIR/../ && pwd)/templates"
source $DIR/../includes/helpers.sh
if [ "$EUID" -ne 0 ]
  then echo "Please run as root"
  exit
fi


umount -l /var/chroot/lib
umount -l /var/chroot/proc
umount -l /var/chroot/sys
umount -l /var/chroot/usr
rm -rf /var/chroot/
bash $DIR/../installers/jail.sh

home_users=`ls /home/`

for user in $home_users    
do
  echo "Jailing User : $user"    
  bash jail-user -u $user
done