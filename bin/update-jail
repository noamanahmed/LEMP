#!/bin/bash

DIR=$(dirname "${BASH_SOURCE[0]}") 
DIR=$(realpath "${DIR}") 

template_path="$(cd $DIR/../ && pwd)/templates"

if [ "$EUID" -ne 0 ]
  then echo "Please run as root"
  exit
fi


rm -rf /var/chroot/
bash ../jail.sh

home_users=`ls /home/`

for $user in $home_users    
do    
    echo "cp /var/chroot/* /home/$user/"
done