[Unit]
Description=A Postgres administrative tool
After=network.target

[Service]
User=pgadmin
Group=pgadmin
WorkingDirectory={{user_root}}
ExecStart={{user_root}}/.virtualenv/bin/gunicorn --chdir {{user_root}}/.virtualenv/lib/python{{python}}/site-packages/pgadmin4/ --bind unix:{{user_root}}/pgadmin.sock  

[Install]
WantedBy=multi-user.target